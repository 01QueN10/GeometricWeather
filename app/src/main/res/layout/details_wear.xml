<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_wear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/detail_wear_image"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="@dimen/material_icon_size"
        style="info_icon"
        android:src="@drawable/ic_wear_grey"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:id="@+id/detail_wear_space"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_wear_image"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/detail_wear_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_wear_space"
        android:textSize="@dimen/normal_word_size"
        tools:text="穿衣指数-较舒适" />

    <TextView
        android:id="@+id/detail_wear_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_wear_space"
        android:layout_below="@id/detail_wear_kind"
        android:textSize="@dimen/normal_word_size"
        tools:text="建议着薄外套或牛仔衫裤等服装。年老体弱者宜着夹克衫、薄毛衣等。昼夜温差较大，注意适当增减衣服。" />
</RelativeLayout>