<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_clock_day_week"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp" >

    <ImageView
        android:id="@+id/widget_clock_day_week_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_card"
        android:visibility="gone"
        android:elevation="2dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="164dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <FrameLayout
                android:id="@+id/widget_clock_day_week_line"
                android:layout_centerInParent="true"
                android:elevation="1dp"
                android:layout_width="1dp"
                android:layout_height="68dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/widget_clock_day_week_line"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <TextClock
                        android:id="@+id/widget_clock_day_week_clock"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:format24Hour="HH:mm"
                        android:format12Hour="hh:mm"
                        android:textStyle="normal"
                        android:textSize="50sp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/colorTextLight"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_title_size">

                    <TextView
                        android:id="@+id/widget_clock_day_week_date"
                        android:text="@string/wait_refresh"
                        android:textSize="@dimen/mini_word_size"
                        android:textColor="@color/colorTextLight"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/widget_clock_day_week_line"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageView
                        android:id="@+id/widget_clock_day_week_image"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/weather_cloudy"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_title_size">

                    <TextView
                        android:id="@+id/widget_clock_day_week_weather"
                        android:text="@string/ellipsis"
                        android:textSize="@dimen/mini_word_size"
                        android:textColor="@color/colorTextLight"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="92dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_week_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="0dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp" >

                    <ImageView
                        android:id="@+id/widget_clock_day_week_image_1"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/weather_cloudy" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_temp_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="0dp"
                        android:paddingBottom="20dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_week_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="0dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp" >

                    <ImageView
                        android:id="@+id/widget_clock_day_week_image_2"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/weather_cloudy" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_temp_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="0dp"
                        android:paddingBottom="20dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_week_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="0dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp" >

                    <ImageView
                        android:id="@+id/widget_clock_day_week_image_3"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/weather_cloudy" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_temp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="0dp"
                        android:paddingBottom="20dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_week_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="0dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp" >

                    <ImageView
                        android:id="@+id/widget_clock_day_week_image_4"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/weather_cloudy" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="37dp" >

                    <TextView
                        android:id="@+id/widget_clock_day_week_temp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="0dp"
                        android:paddingBottom="20dp"
                        android:text="@string/ellipsis"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/normal_word_size"
                        android:shadowColor="@color/colorTextGrey"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/widget_clock_day_week_clock_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:elevation="20dp" />

        <ImageButton
            android:id="@+id/widget_clock_day_week_weather_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:elevation="20dp" />

    </LinearLayout>

</RelativeLayout>