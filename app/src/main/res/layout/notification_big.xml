<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_big"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/notification_background_big"
        android:background="@color/notification_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp" >

            <RelativeLayout
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" >

                <ImageView
                    android:id="@+id/notification_big_image_today"
                    android:scaleType="fitCenter"
                    android:src="@drawable/weather_cloudy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/notification_big_text_title"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wait_refresh"
                        android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
                        android:textSize="@dimen/normal_word_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="1dp" >

                    <TextView
                        android:id="@+id/notification_big_text_details"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ellipsis"
                        android:textSize="@dimen/normal_word_size"
                        android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info" />

                    <TextView
                        android:id="@+id/notification_big_text_remark"
                        android:padding="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ellipsis"
                        android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Time"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_week_1"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/notification_big_image_1"
                        style="@style/notification_big_view_week_icon"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_temp_1"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_week_2"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/notification_big_image_2"
                        style="@style/notification_big_view_week_icon"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_temp_2"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_week_3"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/notification_big_image_3"
                        style="@style/notification_big_view_week_icon"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_temp_3"
                        style="@style/notification_big_view_week_text"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_week_4"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/notification_big_image_4"
                        style="@style/notification_big_view_week_icon"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_temp_4"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_week_5"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/notification_big_image_5"
                        style="@style/notification_big_view_week_icon"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp" >

                    <TextView
                        android:id="@+id/notification_big_text_temp_5"
                        style="@style/notification_big_view_week_text" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
