<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="DisableBaselineAlignment,UselessParent">

        <LinearLayout
            android:id="@+id/week_info_1"
            style="@style/weather_info_equal_width_linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/week_text_1"
                    style="@style/weather_info_week_text"
                    tools:text="周三" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/icon_image_1"
                style="@style/weather_info_week_icon"
                tools:src="@drawable/weather_sun_night"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/week_info_2"
            style="@style/weather_info_equal_width_linearLayout">

