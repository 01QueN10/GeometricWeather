                    android:id="@+id/week_text_2"
                    style="@style/weather_info_week_text"
                    tools:text="周四"  />

            </RelativeLayout>

            <ImageView
                android:id="@+id/icon_image_2"
                style="@style/weather_info_week_icon"
                tools:src="@drawable/weather_sun_night"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/week_info_3"
