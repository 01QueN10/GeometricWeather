<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_weather_daily_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRoot">
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRoot"
        app:theme="@style/GeometricWeatherTheme.AppbarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/normal_margin"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/dialog_weather_daily_title"
                android:textStyle="bold"
                style="@style/title_text"
                tools:text="12-24 周五" />

            <TextView
                android:id="@+id/dialog_weather_daily_subtitle"
                android:layout_marginTop="2dp"
                style="@style/subtitle_text"
                tools:text="十一月初七"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/dialog_weather_daily_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/GeometricWeatherTheme.TabLayoutTheme" />
        
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dialog_weather_daily_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorRoot"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>