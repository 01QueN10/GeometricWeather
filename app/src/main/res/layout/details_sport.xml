<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_sport"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/detail_sport_image"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="@dimen/material_icon_size"
        style="info_icon"
        android:src="@drawable/ic_sport_grey"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:id="@+id/detail_sport_space"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_sport_image"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/detail_sport_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_sport_space"
        android:textSize="@dimen/normal_word_size"
        tools:text="运动指数-较适宜" />

    <TextView
        android:id="@+id/detail_sport_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_sport_space"
        android:layout_below="@id/detail_sport_kind"
        android:textSize="@dimen/normal_word_size"
        tools:text="天气较好，但风力较大，推荐您进行室内运动，若在户外运动请注意防风。" />

</RelativeLayout>