<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/material_card">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/container_main_trend_daily_card_timeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/container_main_trend_daily_card_timeIcon"
                android:layout_width="@dimen/flag_icon_size"
                android:layout_height="@dimen/flag_icon_size"
                android:padding="@dimen/normal_margin"
                android:src="@drawable/ic_time"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/container_main_trend_daily_card_timeText"
                android:layout_toRightOf="@id/container_main_trend_daily_card_timeIcon"
                android:layout_centerVertical="true"
                style="@style/content_text"
                tools:text="09:00"
                tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

        </RelativeLayout>

        <TextView
            android:id="@+id/container_main_trend_daily_card_title"
            android:text="@string/daily_overview"
            android:textSize="@dimen/title_text_size"
            android:layout_margin="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <wangdaye.com.geometricweather.ui.widget.trendView.TrendRecyclerView
            android:id="@+id/container_main_trend_daily_card_trendRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>