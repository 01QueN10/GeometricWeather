<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_pm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/detail_pm_image"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="@dimen/material_icon_size"
        style="info_icon"
        android:src="@drawable/ic_pm_grey"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:id="@+id/detail_pm_space"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_pm_image"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/detail_pm_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_pm_space"
        android:textSize="@dimen/normal_word_size"
        tools:text="pm 2.5 : 64 , pm 18 : 149" />

    <TextView
        android:id="@+id/detail_pm_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_pm_space"
        android:layout_below="@id/detail_pm_kind"
        android:textSize="@dimen/normal_word_size"
        tools:text="颗粒物等级:轻度污染" />

</RelativeLayout>