<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_sun"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/detail_sun_image"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="@dimen/material_icon_size"
        style="info_icon"
        android:src="@drawable/ic_sun_grey"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:id="@+id/detail_sun_space"
        android:layout_width="@dimen/material_icon_size"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_sun_image"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/detail_sun_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_sun_space"
        android:textSize="@dimen/normal_word_size"
        tools:text="紫外线-中等" />

    <TextView
        android:id="@+id/detail_sun_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_sun_space"
        android:layout_below="@id/detail_sun_kind"
        android:textSize="@dimen/normal_word_size"
        tools:text="属中等强度紫外线辐射天气，外出时建议涂擦SPF高于15、PA+的防晒护肤品，戴帽子、太阳镜。" />

</RelativeLayout>