<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="true" >

    <ImageView
        android:id="@+id/widget_day_card"
        style="@style/widget_background_card"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="156dp"
        android:layout_height="96dp"
        android:elevation="5dp"
        android:paddingBottom="8dp"
        android:layout_centerInParent="true"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="156dp"
            android:layout_height="80dp"
            android:elevation="5dp"
            android:padding="8dp" >

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="72dp"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/widget_day_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ellipsis"
                    android:textSize="@dimen/normal_word_size"
                    android:textColor="@color/colorTextLight"
                    android:shadowColor="@color/colorTextGrey"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/widget_day_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/weather_cloudy"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="72dp"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/widget_day_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/ellipsis"
                    android:textSize="@dimen/normal_word_size"
                    android:textColor="@color/colorTextLight"
                    android:shadowColor="@color/colorTextGrey"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/widget_day_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="@string/wait_refresh"
            android:textSize="@dimen/widget_time_size"
            android:textColor="@color/colorTextGrey"
            android:elevation="5dp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/widget_day_button"
        style="@style/widget_button"
        tools:ignore="ContentDescription" />

</RelativeLayout>