<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_week"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/widget_week_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_card"
        android:visibility="gone"
        android:elevation="2dp" />

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:elevation="5dp"
        android:layout_height="80dp" >

        <LinearLayout
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:padding="4dp" >

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp" >

                        <TextView
                            android:id="@+id/widget_week_week_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="0dp"
                            android:text="@string/wait_refresh"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp" >

                        <ImageView
                            android:id="@+id/widget_week_image_1"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/weather_cloudy" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp" >

                        <TextView
                            android:id="@+id/widget_week_temp_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="0dp"
                            android:paddingBottom="20dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp" >

                        <TextView
                            android:id="@+id/widget_week_week_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="0dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp" >

                        <ImageView
                            android:id="@+id/widget_week_image_2"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/weather_cloudy" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp" >

                        <TextView
                            android:id="@+id/widget_week_temp_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="0dp"
                            android:paddingBottom="20dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp" >

                        <TextView
                            android:id="@+id/widget_week_week_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="0dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp" >

                        <ImageView
                            android:id="@+id/widget_week_image_3"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/weather_cloudy" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp" >

                        <TextView
                            android:id="@+id/widget_week_temp_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="0dp"
                            android:paddingBottom="20dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp" >

                        <TextView
                            android:id="@+id/widget_week_week_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="0dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp" >

                        <ImageView
                            android:id="@+id/widget_week_image_4"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerHorizontal="true"
