                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp" >

                        <TextView
                            android:id="@+id/widget_week_temp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="0dp"
                            android:paddingBottom="20dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp" >

                        <TextView
                            android:id="@+id/widget_week_week_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingBottom="0dp"
                            android:text="@string/ellipsis"
                            android:textColor="@color/colorTextLight"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="38dp" >

                        <ImageView
                            android:id="@+id/widget_week_image_5"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/weather_cloudy" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp" >

                        <TextView
                            android:id="@+id/widget_week_temp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="0dp"
                            android:paddingBottom="20dp"
                            android:textColor="@color/colorTextLight"
                            android:text="@string/ellipsis"
                            android:textSize="@dimen/normal_word_size"
                            android:shadowColor="@color/colorTextGrey"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="1" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/widget_week_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:elevation="20dp" />

</RelativeLayout>