<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main_pollen"
    android:layout_margin="0dp"
    style="@style/material_card">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container_main_pollen_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/selectable_item_background"
            android:orientation="vertical"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/container_main_pollen_title"
                android:text="@string/allergen"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                style="@style/content_text" />

            <TextView
                android:id="@+id/container_main_pollen_subtitle"
                android:text="@string/feedback_click_to_get_more"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                style="@style/subtitle_text"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container_main_pollen_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="@dimen/normal_margin"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

</androidx.cardview.widget.CardView>