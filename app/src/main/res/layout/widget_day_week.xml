<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_day_week"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/widget_day_week_card"
        style="@style/widget_background_card"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:padding="8dp"
        android:orientation="vertical"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:id="@+id/widget_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp" >

                    <ImageView
                        android:id="@+id/widget_day_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/widget_card"
                        android:visibility="gone"
                        android:elevation="2dp"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="156dp"
                        android:layout_height="96dp"
                        android:elevation="5dp"
                        android:paddingBottom="8dp"
                        android:layout_centerInParent="true" >

                        <RelativeLayout
                            android:layout_width="156dp"
                            android:layout_height="80dp"
                            android:elevation="5dp"
                            android:padding="8dp" >

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="72dp"
                                android:layout_alignParentLeft="true">

                                <TextView
                                    android:id="@+id/widget_day_weather"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/ellipsis"
                                    android:textSize="@dimen/normal_word_size"
                                    android:textColor="@color/colorTextLight"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="60dp"
                                android:layout_height="72dp"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/widget_day_image"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/weather_cloudy"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="72dp"
                                android:layout_alignParentRight="true" >

                                <TextView
                                    android:id="@+id/widget_day_temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="@string/ellipsis"
                                    android:textSize="@dimen/normal_word_size"
                                    android:textColor="@color/colorTextLight"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/widget_day_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:text="@string/wait_refresh"
                            android:textSize="@dimen/widget_time_size"
                            android:textColor="@color/colorTextGrey"
                            android:elevation="5dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                tools:ignore="UselessParent">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/widget_4_day"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="DisableBaselineAlignment">

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="17dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_week_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="0dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp" >

                                <ImageView
                                    android:id="@+id/widget_4_day_image_1"
                                    android:layout_width="38dp"
                                    android:layout_height="38dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/weather_cloudy"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="37dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_temp_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="20dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="17dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_week_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="0dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp" >

                                <ImageView
                                    android:id="@+id/widget_4_day_image_2"
                                    android:layout_width="38dp"
                                    android:layout_height="38dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/weather_cloudy"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="37dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_temp_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="20dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="17dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_week_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="0dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp" >

                                <ImageView
                                    android:id="@+id/widget_4_day_image_3"
                                    android:layout_width="38dp"
                                    android:layout_height="38dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/weather_cloudy"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="37dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_temp_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="20dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="17dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_week_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingBottom="0dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="38dp" >

                                <ImageView
                                    android:id="@+id/widget_4_day_image_4"
                                    android:layout_width="38dp"
                                    android:layout_height="38dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/weather_cloudy"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="37dp" >

                                <TextView
                                    android:id="@+id/widget_4_day_temp_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="20dp"
                                    android:text="@string/ellipsis"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="@dimen/normal_word_size"
                                    android:shadowColor="@color/colorTextGrey"
                                    android:shadowDx="1"
                                    android:shadowDy="1"
                                    android:shadowRadius="1" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/widget_day_week_button"
        style="@style/widget_button"
        tools:ignore="ContentDescription" />

</RelativeLayout>