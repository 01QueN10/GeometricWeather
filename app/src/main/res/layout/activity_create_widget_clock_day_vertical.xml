<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_widget_clock_day_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <ImageView
            android:id="@+id/activity_create_widget_clock_day_vertical_wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/colorTextDark2nd"
            tools:ignore="contentDescription" />

        <wangdaye.com.geometricweather.ui.widget.StatusBarView
            android:id="@+id/activity_create_widget_clock_day_vertical_statusBar"
            android:background="@android:color/black"
            android:alpha="0.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:id="@+id/activity_create_widget_clock_day_vertical_widgetContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/little_margin"
            android:layout_below="@id/activity_create_widget_clock_day_vertical_statusBar" />

    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/activity_create_widget_clock_day_vertical_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_clock_day_vertical_viewStyleTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_view_style"
                        android:layout_alignParentStart="true"
                        style="@style/content_text" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/activity_create_widget_clock_day_vertical_styleSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_toEndOf="@id/activity_create_widget_clock_day_vertical_viewStyleTitle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        app:theme="@style/spinner_item"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_clock_day_vertical_showCardTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_show_widget_card"
                        android:layout_alignParentStart="true"
                        style="@style/content_text" />

                    <Switch
                        android:id="@+id/activity_create_widget_clock_day_vertical_showCardSwitch"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/normal_margin"
                        style="@style/my_switch"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_clock_day_vertical_hideSubtitleTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_hide_subtitle"
                        android:layout_alignParentStart="true"
                        style="@style/content_text" />

                    <Switch
                        android:id="@+id/activity_create_widget_clock_day_vertical_hideSubtitleSwitch"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/normal_margin"
                        style="@style/my_switch"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_clock_day_vertical_subtitleDataTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_subtitle_data"
                        android:layout_alignParentStart="true"
                        style="@style/content_text" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/activity_create_widget_clock_day_vertical_subtitleDataSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_toEndOf="@id/activity_create_widget_clock_day_vertical_subtitleDataTitle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        app:theme="@style/spinner_item"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_clock_day_vertical_blackTextTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_black_text"
                        android:layout_alignParentStart="true"
                        style="@style/content_text" />

                    <Switch
                        android:id="@+id/activity_create_widget_clock_day_vertical_blackTextSwitch"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/normal_margin"
                        style="@style/my_switch"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_clock_day_vertical_clockFontTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_clock_font"
                        android:layout_alignParentStart="true"
                        style="@style/content_text" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/activity_create_widget_clock_day_vertical_clockFontSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_toEndOf="@id/activity_create_widget_clock_day_vertical_clockFontTitle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:layout_marginEnd="@dimen/normal_margin"
                        app:theme="@style/spinner_item"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/activity_create_widget_clock_day_vertical_doneButton"
                        android:layout_margin="@dimen/normal_margin"
                        android:layout_alignParentEnd="true"
                        android:text="@string/done"
                        android:textColor="@color/colorAccent"
                        style="@style/material_button"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>